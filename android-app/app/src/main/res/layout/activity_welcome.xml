<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background"
    android:padding="32dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_mouse"
        android:background="@drawable/circle_background"
        android:padding="16dp"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/welcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Bienvenido a SensorMouse!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/welcomeSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conecta tu móvil al mismo WiFi que el PC."
        android:textSize="16sp"
        android:textColor="@color/secondary_text"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/ipLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu IP local es:"
        android:textSize="16sp"
        android:textColor="@color/primary"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/ipValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="192.168.1.23"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/accent"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnCopyIp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copiar IP"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continuar" />
    </LinearLayout>

</LinearLayout> 